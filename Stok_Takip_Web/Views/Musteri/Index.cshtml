@using Stok_Takip_Web.Models.Siniflar
@model List<Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px; margin-left:20px;width:1080px;">
    <tr style="background-color:maroon; color:white;">

        <th>ADI</th>
        <th>SOYADI</th>
        <th>TELEFON</th>
        <th>MAIL</th>
        <th>ŞEHİR</th>
        <th>ADRES</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Ad</td>
            <td>@x.Soyad</td>
            <td>@x.Telefon</td>
            <td>@x.Mail</td>
            <td>@x.Sehir.Sehir</td>
            <td>@x.Adres</td>
            <td>@Html.ActionLink("Sil", "MusteriSil", new { id = x.ID }, new { @class = "btn btn-danger", @style = "Background-color:red", onclick = "return confirm('Müşteriyi Gerçekten Silmek İstiyor Musunuz?')" }) </td>
            <td>@Html.ActionLink("Güncelle", "MusteriGetir", new { id = x.ID }, new { @class = "btn btn-default", @style = "background-color:orangered; color:white;" })</td>

        </tr>
    }
</table>
@Html.ActionLink("Müşteri Ekle", "MusteriEkle", new { }, new { @class = "btn btn-default", @style = "background-color:blue; color:white; margin-top:15px; margin-left:20px;" })





